@page
@model AspNetCoreHealthChecksSample.Pages.FetchDataModel
@{
    ViewData["Title"] = "FetchData";
}

<h1>Weather forecast</h1>
<p>This component demonstrates fetching data from an external service.</p>

@if (Model.Forecasts == null)
{
    <p><em>Loading...</em></p>
}
else
{
    <table class="table">
        <thead>
            <tr>
                <th>Date</th>
                <th>Temp. (C)</th>
                <th>Temp. (F)</th>
                <th>Summary</th>
            </tr>
        </thead>
        <tbody>
            @foreach (var forecast in Model.Forecasts)
            {
                <tr>
                    <td>@forecast.Date.ToString()</td>
                    <td>@forecast.TemperatureC</td>
                    <td>@forecast.TemperatureF</td>
                    <td>@forecast.Summary</td>
                </tr>
            }
        </tbody>
    </table>
}
